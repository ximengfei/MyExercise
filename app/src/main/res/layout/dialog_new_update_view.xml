<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/version_update_pic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="新版本升级"
        android:textColor="#313131"
        android:textSize="@dimen/title_text_size" />

    <TextView
        android:id="@+id/tv_update_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="(版本号：V3.0)"
        android:textColor="#b8b8b8"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/tv_update_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="4dp"
        android:text="\n1、优化用户登录注册用户体验\n2、完善系统使用流程\n3、增加系统维护用户提醒页面\n"
        android:textColor="#6f6f6f"
        android:textSize="@dimen/medium_text_size" />

    <TextView
        android:id="@+id/tv_update_msg_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/orange"
        android:textSize="@dimen/medium_text_size" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="#d8d8d8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_update_id_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:text="(✘﹏✘ა)不要"
            android:textColor="#b8b8b8"
            android:textSize="@dimen/normal_text_size" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="#d8d8d8" />

        <Button
            android:id="@+id/btn_update_id_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:text="(≖ᴗ≖๑)更新啦"
            android:textColor="#4ecdf0"
            android:textSize="@dimen/normal_text_size" />
    </LinearLayout>

</LinearLayout>